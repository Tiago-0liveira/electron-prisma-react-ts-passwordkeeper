{
	"name": "PasswordKeeper",
	"version": "2.1.1",
	"description": "An Electron boilerplate including TypeScript, React and ESLint.",
	"main": "./dist/main.js",
	"scripts": {
		"dev": "npm-run-all -p dev:react electron:serve",
		"dev:electron": "cross-env NODE_ENV=development webpack --config webpack/electron.webpack.js --mode development && npm run start:electron",
		"dev:react": "cross-env NODE_ENV=development webpack-dev-server --config webpack/react.webpack.js --mode development",
		"electron:serve": "wait-on http-get://localhost:4000/ && npm run dev:electron",
		"start:electron": "electron .",
		"build": "cross-env NODE_ENV=production npm-run-all build:electron build:react",
		"build:run": "cross-env NODE_ENV=production npm-run-all build start:electron",
		"build:electron": "webpack --mode=production --config webpack/electron.webpack.js",
		"build:react": "webpack --mode=production --config webpack/react.webpack.js",
		"package": "npm-run-all build package:dist",
		"package:dist": "electron-builder --x64",
		"package:dist:exe": "npm-run-all package:dist exe",
		"package:exe": "npm-run-all package exe",
		"copyPrismaSchema--not-in-use": "if not exist dist mkdir dist && robocopy prisma dist schema.prisma /NS /NC /NFL /NDL /NJH /NJS",
		"exe": "\"packages/win-unpacked/electron-react-typescript.exe\"",
		"format": "prettier-eslint --write \"{,!(node_modules,dist)/**/}*.{js,jsx}\""
	},
	"build": {
		"appId": "Tiago0liveira.PasswordKeeper",
		"files": [
			"dist/**/*"
		],
		"win": {
			"target": [
				"nsis"
			],
			"icon": "build/icon.ico"
		},
		"nsis": {
			"installerIcon": "build/icon.ico",
			"uninstallerIcon": "build/icon.ico",
			"uninstallDisplayName": "Uninstaller PasswordKeeper",
			"license": "license.txt",
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		}
	},
	"keywords": [],
	"author": "Tiago Oliveira <tfgoliveira@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.9.0",
		"@babel/preset-env": "^7.9.5",
		"@babel/preset-react": "^7.9.4",
		"@babel/preset-typescript": "^7.9.0",
		"@types/electron-devtools-installer": "^2.2.0",
		"@types/react": "^16.9.34",
		"@types/react-dom": "^16.9.6",
		"@types/sqlite3": "^3.1.7",
		"@types/styled-components": "^5.1.0",
		"@typescript-eslint/eslint-plugin": "^3.4.0",
		"@typescript-eslint/parser": "^3.4.0",
		"babel-loader": "^8.1.0",
		"copy-webpack-plugin": "6",
		"cross-env": "^7.0.2",
		"electron": "^8.2.2",
		"electron-devtools-installer": "^3.1.0",
		"eslint": "^7.3.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-standard": "^14.1.1",
		"eslint-import-resolver-typescript": "^2.0.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-react": "^7.24.0",
		"eslint-plugin-standard": "^4.0.1",
		"html-webpack-plugin": "^4.2.0",
		"lint-staged": "^10.2.11",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.3.1",
		"prettier-eslint-cli": "^5.0.1",
		"prisma": "^2.24.1",
		"typescript": "^3.9.5",
		"wait-on": "^5.0.1",
		"webpack": "^4.42.1",
		"webpack-cli": "^3.3.11",
		"webpack-dev-server": "^3.10.3"
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^1.2.35",
		"@fortawesome/free-brands-svg-icons": "^5.15.3",
		"@fortawesome/free-regular-svg-icons": "^5.15.3",
		"@fortawesome/free-solid-svg-icons": "^5.15.3",
		"@fortawesome/react-fontawesome": "^0.1.14",
		"@types/mousetrap": "^1.6.8",
		"clsx": "^1.1.1",
		"core-js": "^3.14.0",
		"css-loader": "^5.2.6",
		"mousetrap": "^1.6.5",
		"node-sass": "^6.0.0",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"regenerator-runtime": "^0.13.7",
		"sass-loader": "10",
		"sqlite3": "^5.0.2",
		"style-loader": "^2.0.0",
		"uuid": "^8.3.2"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix"
		]
	}
}
