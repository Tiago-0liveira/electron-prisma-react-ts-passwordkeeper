{
	"name": "PasswordKeeper",
	"version": "2.2.0",
	"description": "A App to store passwords and to switch steam accounts easily.",
	"main": "./dist/main.js",
	"scripts": {
		"dev": "npm-run-all -p dev:react electron:serve",
		"dev:electron": "cross-env NODE_ENV=development webpack --config webpack/electron.webpack.js --mode development && npm run start:electron",
		"dev:react": "cross-env NODE_ENV=development webpack --config webpack/react.webpack.js --mode development",
		"dev:sqlite": "sqlite3 ./test.db",
		"start:electron": "electron .",
		"build": "cross-env NODE_ENV=production npm-run-all build:electron build:react",
		"build:electron": "webpack --mode=production --config webpack/electron.webpack.js",
		"build:react": "webpack --mode=production --config webpack/react.webpack.js",
		"package": "npm-run-all build package:dist",
		"package:dist": "electron-builder --x64",
		"exe": "\"dist/win-unpacked/PasswordKeeper.exe\""
	},
	"build": {
		"appId": "Tiago0liveira.PasswordKeeper",
		"files": [
			"dist/**/*"
		],
		"extraResources": [
			{
				"from": "./public/assets",
				"to": "assets"
			}
		],
		"win": {
			"target": [
				"nsis"
			],
			"icon": "build/icon.ico"
		},
		"nsis": {
			"installerIcon": "build/icon.ico",
			"uninstallerIcon": "build/icon.ico",
			"uninstallDisplayName": "PasswordKeeper",
			"license": "../LICENSE",
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		}
	},
	"keywords": [],
	"author": "Tiago Oliveira <tfgoliveira@gmail.com>",
	"license": "GPL-3.0-only",
	"devDependencies": {
		"@babel/core": "^7.9.0",
		"@babel/preset-env": "^7.9.5",
		"@babel/preset-react": "^7.9.4",
		"@babel/preset-typescript": "^7.9.0",
		"@types/electron-devtools-installer": "^2.2.0",
		"@types/react": "^16.9.34",
		"@types/react-dom": "^16.9.6",
		"@types/sqlite3": "^3.1.7",
		"@types/styled-components": "^5.1.0",
		"@typescript-eslint/eslint-plugin": "^3.4.0",
		"@typescript-eslint/parser": "^3.4.0",
		"@webpack-cli/serve": "^2.0.5",
		"babel-loader": "^8.1.0",
		"copy-webpack-plugin": "6",
		"cross-env": "^7.0.2",
		"electron": "26.3.0",
		"electron-devtools-installer": "^3.1.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-standard": "^14.1.1",
		"eslint-import-resolver-typescript": "^2.0.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-react": "^7.24.0",
		"eslint-plugin-standard": "^4.0.1",
		"file-loader": "^6.2.0",
		"html-webpack-plugin": "^4.2.0",
		"lint-staged": "^10.2.11",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.3.1",
		"prettier-eslint-cli": "^5.0.1",
		"prisma": "^2.24.1",
		"sass": "^1.68.0",
		"svg-inline-loader": "^0.8.2",
		"typescript": "^3.9.5",
		"wait-on": "^5.0.1",
		"webpack": "^5.88.2",
		"webpack-cli": "5.1",
		"webpack-dev-server": "^4.15.1"
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^6.4.2",
		"@fortawesome/free-brands-svg-icons": "^6.4.2",
		"@fortawesome/free-regular-svg-icons": "^6.4.2",
		"@fortawesome/free-solid-svg-icons": "^6.4.2",
		"@fortawesome/react-fontawesome": "^0.2.0",
		"@types/mousetrap": "^1.6.8",
		"@types/react-window": "^1.8.5",
		"clsx": "^1.1.1",
		"core-js": "^3.14.0",
		"css-loader": "^5.2.6",
		"mousetrap": "^1.6.5",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-window": "^1.8.8",
		"regenerator-runtime": "^0.13.7",
		"sass-loader": "10",
		"sqlite3": "^5.0.2",
		"style-loader": "^2.0.0",
		"uuid": "^8.3.2",
		"webpack-node-externals": "^3.0.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix"
		]
	}
}
