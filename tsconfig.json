{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["dom", "es2015", "es2016", "es2017"],
		"allowJs": true,
		"jsx": "react",
		"sourceMap": false,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"typeRoots" : ["./src/types"],
		"moduleResolution": "node",
		"paths": {
			"@" : ["./src/"],
			"components/*": ["./src/components/*"],
			"apps/*": ["./src/components/Apps/"],
			"reducers/*": ["./src/reducers/*"],
			"providers/*": ["./src/providers/*"],
			"enums": ["./src/enums.ts"],
			"icons": ["./src/icons/index.tsx"],
		}
	},
	"include": [
		"./electron/**/*.ts",
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
