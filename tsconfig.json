{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["dom", "es2015", "es2016", "es2017"],
		"allowJs": true,
		"jsx": "react",
		"sourceMap": false,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"typeRoots" : ["./src/types/"],
		"moduleResolution": "node",
		"paths": {
			"@components/*": ["./src/frontend/components/*"],
			"@apps/*": ["./src/frontend/components/Apps/"],
			"@reducers/*": ["./src/frontend/reducers/*"],
			"@providers/*": ["./src/frontend/providers/*"],
			"@shared/*": ["./src/shared/*"],
		}
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
